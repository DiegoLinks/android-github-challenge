<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_company"
        android:layout_width="@dimen/view_size_m"
        android:layout_height="@dimen/view_size_m"
        android:layout_marginStart="@dimen/spacing_s"
        android:layout_marginTop="@dimen/spacing_m"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_company"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_s"
        android:layout_marginTop="@dimen/spacing_m"
        android:ellipsize="end"
        android:lines="1"
        app:layout_constraintBottom_toBottomOf="@id/iv_company"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_company"
        tools:text="google" />

    <ImageView
        android:id="@+id/iv_location"
        android:layout_width="@dimen/view_size_m"
        android:layout_height="@dimen/view_size_m"
        android:layout_marginStart="@dimen/spacing_s"
        android:layout_marginTop="@dimen/spacing_m"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_company" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_s"
        android:layout_marginTop="@dimen/spacing_m"
        app:layout_constraintBottom_toBottomOf="@id/iv_location"
        app:layout_constraintStart_toEndOf="@id/iv_location"
        tools:text="Belo Horizonte - BR" />

    <ImageView
        android:id="@+id/iv_site"
        android:layout_width="@dimen/view_size_m"
        android:layout_height="@dimen/view_size_m"
        android:layout_marginStart="@dimen/spacing_s"
        android:layout_marginTop="@dimen/spacing_m"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_location" />

    <TextView
        android:id="@+id/tv_site"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_s"
        android:layout_marginTop="@dimen/spacing_m"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_site"
        app:layout_constraintStart_toEndOf="@id/iv_site"
        tools:text="www.github.com" />

    <ImageView
        android:id="@+id/iv_email"
        android:layout_width="@dimen/view_size_m"
        android:layout_height="@dimen/view_size_m"
        android:layout_marginStart="@dimen/spacing_s"
        android:layout_marginTop="@dimen/spacing_m"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_site" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_s"
        android:layout_marginTop="@dimen/spacing_m"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_email"
        app:layout_constraintStart_toEndOf="@id/iv_email"
        tools:text="john@doe.com" />

    <ImageView
        android:id="@+id/iv_twitter"
        android:layout_width="@dimen/view_size_m"
        android:layout_height="@dimen/view_size_m"
        android:layout_marginStart="@dimen/spacing_s"
        android:layout_marginTop="@dimen/spacing_m"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_email" />

    <TextView
        android:id="@+id/tv_twitter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_s"
        android:layout_marginTop="@dimen/spacing_m"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_twitter"
        app:layout_constraintStart_toEndOf="@id/iv_twitter"
        tools:text="johndoe_" />

    <ImageView
        android:id="@+id/iv_follow"
        android:layout_width="@dimen/view_size_m"
        android:layout_height="@dimen/view_size_m"
        android:layout_marginStart="@dimen/spacing_s"
        android:layout_marginTop="@dimen/spacing_m"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_twitter" />

    <TextView
        android:id="@+id/tv_follow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_s"
        android:layout_marginTop="@dimen/spacing_m"
        app:layout_constraintBottom_toBottomOf="@id/iv_follow"
        app:layout_constraintStart_toEndOf="@id/iv_follow"
        tools:text="10 seguidores â€¢ 10 seguindo" />


</androidx.constraintlayout.widget.ConstraintLayout>